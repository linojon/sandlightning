template(name="talkShow")
  .row
    .col-md-12
      p(style="margin: 1em 0;")
        a.btn.btn-default(href="{{pathFor 'forumShow' _id=forumId}}") &larr; back to {{forum.title}}
      .embed-responsive.embed-responsive-4by3
        <iframe class="embed-responsive-item" src="//www.youtube.com/embed/{{yt_id}}?autoplay=1&autohide=1&showinfo=0&rel=0" width="640" height="390" allowfullscreen></iframe>
      h1 {{title}}
      h3 {{author}}
      p
        small 
          em If you'd like to leave a comment or upvote this video, please click the small YouTube button at bottom right.
